
<h1> <%= @task.title %> </h1>
<p> Description: <%= @task.details %></p>
<p> <%= @task.completed %></p>

<%= link_to 'Back to tasks', tasks_path %>
<%= link_to 'Edit task', edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete the task #{@task.title}?" } %>
